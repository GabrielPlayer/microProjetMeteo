<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MicroProjet Prévisions Météo</title>
    <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 10px;
    }

    tr{
        width: 50px;
        height: 20px;
        font-size: 12px;
        text-align: center;
    }

    tr:nth-of-type(odd) {
        background-color: #f5f5f5;
    }

    tr:nth-of-type(even) {
        background-color: #e9e9e9;

    }
    tr:first-child{
        background-color: #af8e8e;
    }
    .container {
        display: flex;
        flex-wrap: wrap;
    }
    .table {
        box-sizing: border-box;
        padding: 20px;
        display: inline-block;
        vertical-align: top;
    }
    .table:nth-child(1) {
        margin-right: 10px;
    }
    .table:nth-child(2) {
        border-left: 2px solid #ccc;
    }
    .table tr {
        height: 40px;
    }
    .left{
        width: 50%;
    }
    </style>
</head>
<body>
    <div class="container">
        <div class="left">
            <h1>Météo</h1>
            <table class="table">
                <tr>
                <th>Nom Station</th>
                <th>Jour</th>
                <th>Heure</th>
                <th>Temp.</th>
                <th>Vent</th>
                <th>Pluie</th>
                <th>Humidité</th>
                <th>Pression</th>
                <th>Luminosité</th>
                </tr>
                <% for (let i = 0; i < meteo.length; i++) { %>
                <tr>
                    <td><%= meteo[i].name %></td>
                    <td><%= meteo[i].date %></td>
                    <td><%= meteo[i].heure %></td>
                    <td><%= meteo[i].temperature %></td>
                    <td><%= meteo[i].vent %></td>
                    <td><%= meteo[i].pluie %></td>
                    <td><%= meteo[i].humidite %></td>
                    <td><%= meteo[i].pression %></td>
                    <td><%= meteo[i].luminosite %></td>
                </tr>
                <% } %>
            </table>
        </div>
        <div class="right">
            <h2>Prévisions pour les 3 prochains jours</h2>
            <table class="table">
                <tr>
                <th>Jour</th>
                <th>Heure</th>
                <th>Temp.</th>
                <th>moy.</th>
                <th>raf.</th>
                <th>Pluie</th>
                <th>Humidité</th>
                <th>Pression</th>
                </tr>
                <% for (let j = 0; j < previsions.length; j++) { %>
                <tr>
                    <td><%= previsions[j].Jour %></td>
                    <td><%= previsions[j].Heure %></td>
                    <td><%= previsions[j]['Temp.'] %></td>
                    <td><%= previsions[j]['moy.'] %></td>
                    <td><%= previsions[j]['raf.'] %></td>
                    <td><%= previsions[j]['Pluiesur 3h'] %></td>
                    <td><%= previsions[j].Humidité %></td>
                    <td><%= previsions[j].Pression %></td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</body>
</html>